{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
<div class="alert alert-danger" role="alert">
    {{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <div class="container">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" class="form-control form-control-lg" id="username" name="_username" value="{{ last_username }}" required="required" />
    <br/>
    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password"  class="form-control form-control-lg" id="password" name="_password" required="required" />
    <br/>
    <input type="checkbox" class="form-check-input form-control-lg"id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    <br/>
    <input type="submit" id="_submit" class="btn btn-success btn-lg btn-block" name="_submit" value="{{ 'security.login.submit'|trans }}" /> <br />
        <!--<a href="{{ hwi_oauth_login_url('facebook') }}" class="loginBtn loginBtn--facebook btn-lg"><span class="centretxt">Login with Facebook</span></a>-->
    <button type="button" onclick="window.location.href='{{ hwi_oauth_login_url('facebook') }}'" class="btn btn-lg btn-fb btn-block"><i class="fa fa-facebook left"></i> Facebook</button>
    <script>
        $(document).ready(function(){
            $(".btn").click(function(){
                $(this).button('loading');
            });
        });
    </script>
</form>
